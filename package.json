    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.6",
    "husky": "^8.0.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "sass": "^1.77.8",
    "typescript": "5.5.4",
